    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "name": "Python: Current File (Integrated Terminal)",
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal"
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "development",
                "PYTHONPATH": "/Users/ravikadam/opt/anaconda3"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        }
    ]
}